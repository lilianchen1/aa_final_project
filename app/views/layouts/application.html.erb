<!DOCTYPE html>
<html>
<head>
  <title>NoPhenotype</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if !current_user.nil? %>
    <div class="nav-bar">
      <%= image_tag "NoPhenotype.png" %>
      <div class="nav-bar-right"></div>
    </div>
    <h3><%= current_user.username %></h3>
    <%= button_to "Log Out", session_url, method: :delete %>
  <% end %>

  <% if flash.now[:errors] %>
    <% flash.now[:errors].each do |error| %>
      <%= error %>
    <% end %>
  <% end %>

<%= yield %>

</body>
</html>
